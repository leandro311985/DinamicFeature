<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/navigation_login"
    app:moduleName="@string/title_login"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.example.dinamicfeature.splash.SplashFragment"
        android:label="splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_loginFragment"
            app:destination="@id/login_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.dinamicfeature.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_profile"
            app:destination="@id/navigation_profile"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_loginFragment_to_create_fragment"
            app:destination="@id/create_login_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/create_login_fragment"
        android:name="com.example.dinamicfeature.createAccount.CreateAccountFragment"
        android:label="createAccount"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_create_login_fragment_to_success"
            app:destination="@id/success_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/success_fragment"
        android:name="com.example.dinamicfeature.createAccount.FragmentSuccess"
        android:label="Fragment_success"
        tools:layout="@layout/fragment_success">

        <action
            android:id="@+id/action_success_to_profile"
            app:destination="@id/navigation_profile"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/success_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <include-dynamic
        android:id="@id/navigation_profile"
        android:name="com.example.dinamicfeature.profile"
        app:graphPackage="com.example.dinamicfeature.profile"
        app:graphResName="navigation_profile"
        app:moduleName="@string/title_profile" />

</navigation>
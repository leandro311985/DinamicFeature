<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/navigation_search_people"
    app:moduleName="@string/title_searchpeople"
    app:startDestination="@id/search_fragment">

    <fragment
        android:id="@+id/search_fragment"
        android:name="com.example.dinamicfeature.searchpeople.SearchFragment"
        android:label="@string/title_searchpeople"
        tools:layout="@layout/fragment_search_people">

        <action
            android:id="@+id/action_search_fragment_to_search_fragment_list"
            app:destination="@id/search_list_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/search_list_fragment"
        android:name="com.example.dinamicfeature.searchpeople.SearchListFragment"
        android:label="fragment_search_list"
        tools:layout="@layout/fragment_search_list">

    </fragment>

</navigation>
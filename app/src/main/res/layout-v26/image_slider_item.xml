<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fundo">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idIVText"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/path673"
        android:justificationMode="inter_word"
        android:text="@string/app_name"
        android:gravity="center"
        android:padding="@dimen/DEFAULT_20DP"
        android:textSize="@dimen/DEFAULT_14SP"
        android:layout_marginEnd="@dimen/DEFAULT_40DP"
        android:layout_marginStart="@dimen/DEFAULT_40DP"
        android:layout_marginTop="@dimen/DEFAULT_150DP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar1"
        android:layout_marginStart="@dimen/DEFAULT_20DP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idIVText" />

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DinamicFeature" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DEFAULT_TEXT_LOGIN</item>
        <item name="colorPrimaryVariant">@color/DEFAULT_BLUE_SPLASH</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--  Progress Button  -->
    <style name="Widget.App.ProgressButtonView" parent="">
        <item name="android:theme">@style/ThemeOverlay.App.ProgressButtonView</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!--  Custom Button Style  -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#00B1E7</item>
    </style>

    <!--  Custom Progress Bar Style  -->
    <style name="Widget.App.InnerButtonProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

</resources>
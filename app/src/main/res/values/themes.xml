<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DinamicFeature" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DEFAULT_AZUL_APP_6</item>
        <item name="colorPrimaryVariant">@color/DEFAULT_ORANGE_APP</item>
        <item name="colorOnPrimary">@color/DEFAULT_WHITE</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DEFAULT_ORANGE_APP</item>
        <item name="colorSecondaryVariant">@color/DEFAULT_ORANGE_APP</item>
        <item name="colorOnSecondary">@color/DEFAULT_BLACK</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>

    </style>


    <!--  Progress Button  -->
    <style name="Widget.App.ProgressButtonView" parent="">
        <item name="android:theme">@style/ThemeOverlay.App.ProgressButtonView</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!--  Custom Button Style  -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#00B1E7</item>
    </style>

    <!--  Custom Progress Bar Style  -->
    <style name="Widget.App.InnerButtonProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/DEFAULT_BLACK</item>
    </style>

    <style name="Potlid_font">
        <item name="android:fontFamily">@font/swiss721</item>
    </style>

    <style name="Potlid_font_bold">
        <item name="android:fontFamily">@font/swiss721bold</item>
    </style>

    <style name="Potlid_normal_14sp" parent="Potlid_font">
        <item name="android:textSize">@dimen/DEFAULT_14SP</item>
        <item name="android:textColor">@color/DEFAULT_TEXT_REGISTER</item>
    </style>

    <style name="Potlid_normal_14sp_bold" parent="Potlid_font_bold">
        <item name="android:textSize">@dimen/DEFAULT_14SP</item>
        <item name="android:textColor">@color/DEFAULT_TEXT_REGISTER</item>
    </style>

    <style name="Potlid_normal_14sp_text_black" parent="Potlid_font">
        <item name="android:textSize">@dimen/DEFAULT_14SP</item>
        <item name="android:textColor">@color/DEFAULT_BLACK</item>
        <item name="android:lineSpacingExtra">@dimen/DEFAULT_4SP</item>
    </style>

    <style name="Potlid_normal_18sp" parent="Potlid_font">
        <item name="android:textSize">@dimen/DEFAULT_18SP</item>
        <item name="android:textColor">@color/DEFAULT_TEXT_REGISTER</item>
        <item name="android:lineSpacingExtra">@dimen/DEFAULT_4SP</item>
    </style>

    <style name="Potlid_normal_orange_16sp" parent="Potlid_font">
        <item name="android:textSize">@dimen/DEFAULT_16SP</item>
        <item name="android:textColor">@color/DEFAULT_ORANGE_APP</item>
        <item name="android:lineSpacingExtra">@dimen/DEFAULT_4SP</item>
    </style>

    <style name="Potlid_normal_20sp" parent="Potlid_font">
        <item name="android:textSize">@dimen/DEFAULT_20SP</item>
        <item name="android:textColor">@color/DEFAULT_AZUL_APP_4</item>
        <item name="android:lineSpacingExtra">@dimen/DEFAULT_4SP</item>
    </style>

    <style name="SwitchCompatStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/DEFAULT_ORANGE_APP</item>
        <item name="trackTint">@color/DEFAULT_GRAY_APP</item>
    </style>

    <style name="SeekBarStyle2" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlNormal">@color/DEFAULT_ORANGE_APP</item>
        <item name="colorControlActivated">@color/DEFAULT_GRAY_APP</item>
    </style>

</resources>
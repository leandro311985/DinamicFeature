<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DEFAULT_10DP"
            android:layout_marginTop="@dimen/DEFAULT_10DP"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DEFAULT_20DP"
            android:layout_marginTop="@dimen/DEFAULT_20DP"
            android:src="@drawable/txt_perfil_geral"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DEFAULT_20DP"
            android:layout_marginTop="@dimen/DEFAULT_30DP"
            android:text="Qual sua preferencia?"
            android:textColor="@color/DEFAULT_TEXT_REGISTER"
            android:textSize="@dimen/DEFAULT_20SP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DEFAULT_20DP"
            android:layout_marginEnd="@dimen/DEFAULT_40DP"
            android:layout_marginTop="@dimen/DEFAULT_20DP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_data"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homen" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulher" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LGBTQIA+" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assexual" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homens e Mulheres" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sapiossexual" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pansexual" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos os gÃªneros" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_aparencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DEFAULT_20DP"
            android:layout_marginTop="@dimen/DEFAULT_50DP"
            android:text="Qual se objetivo?"
            android:textColor="@color/DEFAULT_TEXT_REGISTER"
            android:textSize="@dimen/DEFAULT_20SP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group_filter" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filter2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DEFAULT_20DP"
            android:layout_marginEnd="@dimen/DEFAULT_40DP"
            android:layout_marginTop="@dimen/DEFAULT_20DP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_aparencia"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAp2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namoro" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAp3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amizade" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4Ap"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relacionamento" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5Ap"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/chip_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casar" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
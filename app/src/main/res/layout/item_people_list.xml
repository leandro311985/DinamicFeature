<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_people">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_item"
            android:layout_width="180dp"
            android:layout_height="@dimen/DEFAULT_150DP"
            android:scaleType="centerCrop"
            android:src="@drawable/mulheres1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_rc"
            android:layout_width="@dimen/DEFAULT_0DP"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Maria graça"
            android:layout_marginTop="@dimen/DEFAULT_20DP"
            android:textColor="@color/DEFAULT_2777B4"
            android:textSize="@dimen/DEFAULT_16SP"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title_rc"
            android:layout_width="@dimen/DEFAULT_0DP"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DEFAULT_10DP"
            android:layout_marginBottom="@dimen/DEFAULT_20DP"
            android:text="Rua Jatobá, 1841 Olinda-PE 53270-620"
            android:textColor="@color/DEFAULT_AAB09F"
            android:textSize="@dimen/DEFAULT_12SP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_rc" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

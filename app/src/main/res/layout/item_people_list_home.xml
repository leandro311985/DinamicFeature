<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_people">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sinilization"
            android:layout_width="@dimen/DEFAULT_12DP"
            android:layout_height="@dimen/DEFAULT_12DP"
            android:layout_marginTop="@dimen/DEFAULT_8DP"
            android:layout_marginEnd="@dimen/DEFAULT_12DP"
            android:scaleType="centerCrop"
            android:elevation="@dimen/DEFAULT_10DP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DEFAULT_300DP"
            android:scaleType="centerCrop"
            android:src="@drawable/mulheres1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_rc"
            style="@style/Potlid_normal_18sp"
            android:layout_width="@dimen/DEFAULT_0DP"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="@dimen/DEFAULT_10DP"
            android:layout_marginStart="@dimen/DEFAULT_10DP"
            android:text="Thais, 35"
            android:textSize="@dimen/DEFAULT_20SP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title_rc"
            android:layout_width="@dimen/DEFAULT_0DP"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DEFAULT_10DP"
            android:layout_marginBottom="@dimen/DEFAULT_20DP"
            android:layout_marginStart="@dimen/DEFAULT_10DP"
            android:text="11km"
            android:drawableStart="@drawable/ic_indicator"
            android:textColor="@color/DEFAULT_GRAY_APP"
            android:textSize="@dimen/DEFAULT_12SP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_rc" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

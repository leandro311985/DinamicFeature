<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A2DAFD"
        android:src="@drawable/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_astral_mapa"
        android:layout_width="@dimen/DEFAULT_50DP"
        android:layout_height="@dimen/DEFAULT_50DP"
        android:layout_marginTop="@dimen/DEFAULT_40DP"
        android:layout_marginEnd="@dimen/DEFAULT_20DP"
        android:src="@drawable/img_2_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Potlid_normal_14sp"
        android:text="Mapa"
        app:layout_constraintTop_toBottomOf="@id/image_astral_mapa"
        app:layout_constraintEnd_toEndOf="@+id/image_astral_mapa"
        app:layout_constraintStart_toStartOf="@+id/image_astral_mapa" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DEFAULT_40DP"
        android:src="@drawable/text_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_toolbar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DEFAULT_180DP"
        android:layout_marginTop="@dimen/DEFAULT_60DP"
        android:src="@drawable/img_1_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_text" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DEFAULT_40DP"
        android:src="@drawable/image_1_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_cancel"
        android:layout_width="@dimen/DEFAULT_180DP"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/DEFAULT_20DP"
        android:layout_marginTop="@dimen/DEFAULT_40DP"
        android:background="@drawable/btn_save"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_save"
        android:layout_width="@dimen/DEFAULT_180DP"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DEFAULT_40DP"
        android:layout_marginEnd="@dimen/DEFAULT_20DP"
        android:background="@drawable/btn_save_2"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2_text" />


</androidx.constraintlayout.widget.ConstraintLayout>
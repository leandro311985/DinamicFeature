<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/text_title"
           style="@style/Potlid_normal_18sp"
           android:textSize="@dimen/DEFAULT_30DP"
           android:layout_marginTop="@dimen/DEFAULT_20DP"
           android:layout_marginEnd="@dimen/DEFAULT_20DP"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:drawableStartCompat="@drawable/ic_icon_back_black"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:text="DÃª um nome ou apelido ao seu avatar"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/DEFAULT_300DP"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/DEFAULT_40DP"
            android:src="@drawable/avatar8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_title" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/Potlid_normal_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DEFAULT_40DP"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="@dimen/DEFAULT_20DP"
            android:hint="Nome"
            android:textSize="@dimen/DEFAULT_30DP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_next"
        style="@style/Potlid_normal_18sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DEFAULT_40DP"
        android:background="@color/DEFAULT_AZUL_APP_6"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="@dimen/DEFAULT_20DP"
        android:layout_marginStart="@dimen/DEFAULT_20DP"
        android:layout_marginEnd="@dimen/DEFAULT_20DP"
        android:elevation="@dimen/DEFAULT_20DP"
        android:text="@string/confirm_register"
        android:textColor="@color/DEFAULT_WHITE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
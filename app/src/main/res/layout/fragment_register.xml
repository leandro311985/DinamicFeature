<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/item_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/DEFAULT_150DP"
                android:layout_height="@dimen/DEFAULT_150DP"
                android:layout_marginStart="@dimen/DEFAULT_20DP"
                android:layout_marginTop="@dimen/DEFAULT_40DP"
                android:src="@drawable/img_dados_basico"
                app:layout_constraintBottom_toTopOf="@id/txt_image1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados \nBásicos"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView1"
                app:layout_constraintStart_toStartOf="@+id/imageView1"
                app:layout_constraintTop_toBottomOf="@id/imageView1" />

            <include
                android:id="@+id/container_barra"
                layout="@layout/item_barra_cadstro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DEFAULT_20DP"
                app:layout_constraintEnd_toEndOf="@+id/imageView1"
                app:layout_constraintStart_toStartOf="@+id/imageView1"
                app:layout_constraintTop_toBottomOf="@id/txt_image1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/DEFAULT_150DP"
                android:layout_height="@dimen/DEFAULT_150DP"
                android:layout_below="@id/imageView1"
                android:layout_marginTop="@dimen/DEFAULT_40DP"
                android:layout_marginEnd="@dimen/DEFAULT_20DP"
                android:src="@drawable/img_perfil_fisico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil \nFísico"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toBottomOf="@id/imageView2" />

            <include
                android:id="@+id/container_barra2"
                layout="@layout/item_barra_cadstro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DEFAULT_20DP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintTop_toBottomOf="@id/txt_image2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/DEFAULT_180DP"
                android:layout_height="@dimen/DEFAULT_150DP"
                android:layout_marginStart="@dimen/DEFAULT_20DP"
                android:layout_marginTop="@dimen/DEFAULT_40DP"
                android:src="@drawable/img_perfilgeral"
                app:layout_constraintBottom_toTopOf="@id/txt_image3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil \nGeral"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="@id/imageView3"
                app:layout_constraintTop_toBottomOf="@id/imageView3" />

            <include
                android:id="@+id/container_barra3"
                layout="@layout/item_barra_cadstro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DEFAULT_20DP"
                app:layout_constraintEnd_toEndOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="@id/imageView3"
                app:layout_constraintTop_toBottomOf="@id/txt_image3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/DEFAULT_150DP"
                android:layout_height="@dimen/DEFAULT_150DP"
                android:layout_below="@id/imageView3"
                android:layout_marginTop="@dimen/DEFAULT_40DP"
                android:layout_marginEnd="@dimen/DEFAULT_20DP"
                android:src="@drawable/img_bem_estar_potlid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bem-estar \nPotlid"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/imageView4"
                app:layout_constraintStart_toStartOf="@id/imageView4"
                app:layout_constraintTop_toBottomOf="@id/imageView4" />

            <include
                android:id="@+id/container_barra4"
                layout="@layout/item_barra_cadstro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DEFAULT_20DP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/imageView4"
                app:layout_constraintTop_toBottomOf="@id/txt_image4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>